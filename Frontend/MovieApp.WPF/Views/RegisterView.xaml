<UserControl x:Class="MovieApp.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="40">
            <TextBlock Text="Registro de Usuario" FontSize="24" Margin="0 0 0 20" TextAlignment="Center"/>

            <TextBlock Text="Correo electronico" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Contrasena" />
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0 0 0 20"/>

            <Button Content="Registrarse" Command="{Binding RegisterCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
