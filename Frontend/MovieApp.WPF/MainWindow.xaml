        xmlns:views="clr-namespace:MovieApp.WPF.Views"
        Title="MovieApp" Height="500" Width="800">
    <Window.DataContext>
        <vm:MainViewModel xmlns:vm="clr-namespace:MovieApp.WPF.ViewModels" />
    </Window.DataContext>

    <ContentControl Content="{Binding CurrentViewModel}" />
</Window>
